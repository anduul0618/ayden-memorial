// index.js

const comments = [];

function handleSubmit() {
  const nameInput = document.getElementById("name");
  const commentInput = document.getElementById("comment");
  const name = nameInput.value.trim();
  const comment = commentInput.value.trim();

  // Validation
  if (!name) {
    alert("Please enter your name.");
    return;
  }
  if (!comment) {
    alert("Please enter a comment.");
    return;
  }

  // Log to console
  console.log("Name:", name);
  console.log("Comment:", comment);

  // Store comment
  comments.push({ name, comment });

  // Display all comments on page
  displayComments();

  // Clear inputs
  nameInput.value = "";
  commentInput.value = "";
}

function displayComments() {
  let container = document.getElementById("comments-container");
  if (!container) {
    container = document.createElement("div");
    container.id = "comments-container";
    container.className = "mt-4"; // Tailwind margin top
    document.body.appendChild(container);
  }

  // Clear old
  container.innerHTML = "";

  comments.forEach(c => {
    const div = document.createElement("div");
    div.className = "border p-2 my-2 rounded bg-white";
    div.innerHTML = `<strong>${c.name}:</strong> ${c.comment}`;
    container.appendChild(div);
  });
}


